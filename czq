<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="keywords" content="圣强，公式，物理知识">
		<title>圣强宝典</title>
		<script>
			'use strict';
			window.MathJax={
				tex:{inlineMath:[['$','$']]},
				svg:{fontCache:'global'}
			};
			function show1(){
				document.getElementById('theorem').style.display='block';
				document.getElementById('main').style.display='none';
				document.getElementById('about').style.display='none';	
			}
			function show2(){
				document.getElementById('theorem').style.display='none';
				document.getElementById('main').style.display='block';
				document.getElementById('about').style.display='none';	
			}
			function show3(){
				document.getElementById('theorem').style.display='none';
				document.getElementById('main').style.display='none';
				document.getElementById('about').style.display='block';	
			}
			function EnterPrintMode() {
				// 暂时移除界面元素
				document.getElementsByClassName('title')[0].style.display = "none";
				document.getElementById('about').style.display = "none";
				document.getElementById('main-s').style.display = "none";
				document.getElementById('CardHoverEffect').disabled = 1;
				// 定理部分 UI
				let theorem = document.getElementById('theorem');
				theorem.style.display = 'block';
				theorem.style.marginTop = "10px";
				let tmp = document.createElement('h2');
				tmp.innerText = "公式部分";
				theorem.insertBefore(tmp, theorem.firstChild);
			}
			function ExitPrintMode() {
				// 暂时移除界面元素
				document.getElementsByClassName('title')[0].style.display = "flex";
				document.getElementById('about').style.display = "block";
				document.getElementById('main-s').style.display = "block";
				document.getElementById('CardHoverEffect').disabled = 0;
				// 定理部分 UI
				let theorem = document.getElementById('theorem');
				theorem.style.display = 'none';
				theorem.style.marginTop = "80px";
				theorem.firstChild.remove();
				// 模型与方法部分 UI
				let main = document.getElementById('main');
				main.style.display = 'none';
				main.style.marginTop = "80px";
				main.firstChild.remove();
			}
			function printall() {
				EnterPrintMode();
				window.print();
				ExitPrintMode();
			}
			// 搜索代码
			window.onload = ()=>{
				(function() {
					function f() {
						let ele = document.getElementsByClassName("maincard");
						let box1 = document.getElementById("inputbox");
						let box2v = document.getElementById("inputbox2").checked;
						for (let i = 0; i < ele.length; i++) {
							if (box2v) {
								if (ele[i].innerText.includes(box1.value)) ele[i].style.display = "block";
								else ele[i].style.display = "none";
							} else {
								if (ele[i].dataset["key"].includes(box1.value)) ele[i].style.display = "block";
								else ele[i].style.display = "none";
							}
						}
					}
					document.getElementById("inputbox").addEventListener('input', f);
					document.getElementById("inputbox2").addEventListener('input', f);
				})();
				(function() {
					function f() {
						let ele = document.getElementsByClassName("theoremcard");
						let box1 = document.getElementById("Tinputbox");
						let box2v = document.getElementById("Tinputbox2").checked;
						for (let i = 0; i < ele.length; i++) {
							if (box2v) {
								if (ele[i].innerText.includes(box1.value)) ele[i].style.display = "block";
								else ele[i].style.display = "none";
							} else {
								if (ele[i].dataset["key"].includes(box1.value)) ele[i].style.display = "block";
								else ele[i].style.display = "none";
							}
						}
					}
					document.getElementById("Tinputbox").addEventListener('input', f);
					document.getElementById("Tinputbox2").addEventListener('input', f);
				})();
			}
		</script>
		<script src="https://cdn.jsdelivr.net/npm/mathjax@3.0.1/es5/tex-mml-chtml.js"></script>
	</head>
	<body>
